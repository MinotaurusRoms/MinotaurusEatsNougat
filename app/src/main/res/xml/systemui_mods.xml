<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen
        android:title="Notification Panel">
        <PreferenceScreen
            android:title="Device info customization">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="true"
                android:key="device_info_visibility"
                android:summaryOff="Disabled"
                android:summaryOn="Enabled"
                android:title="Enable device info view"/>
            <PreferenceCategory
                android:title="Text colors"
                android:dependency="device_info_visibility">
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#ffffffff"
                    android:key="gear_info_names_color"
                    android:title="Info names text color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#ffffffff"
                    android:key="gear_info_values_color"
                    android:title="Info values text color"/>
            </PreferenceCategory>
            <PreferenceCategory
                android:title="Device Info Items"
                android:dependency="device_info_visibility">
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_model"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Device model"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_android_version"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Android version"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_build_version"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Build version"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_battery_level"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Battery level"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_network_name"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Network name"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_wifi_info"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="WIFI info"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_next_alarm"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Next alarm"/>
                <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                    android:defaultValue="true"
                    android:key="device_up_time"
                    android:summaryOff="Hidden"
                    android:summaryOn="Shown"
                    android:title="Device up time"/>
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
            android:title="Carrier label text">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="Carrier label visibility"
                android:defaultValue="true"
                android:summaryOff="Hidden"
                android:summaryOn="Shown"
                android:key="carrier_label_visibility"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:dependency="carrier_label_visibility"
                android:defaultValue="#ffffff"
                android:key="carrier_label_text_color"
                android:title="Carrier label text color"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:title="Carrier label text"
                android:entries="@array/carrier_entries"
                android:entryValues="@array/carrier_entry_values"
                android:defaultValue="0"
                app:dependentValue="0"
                android:key="is_custom_carrier_label"
                android:dependency="carrier_label_visibility"/>
            <com.wubydax.romcontrol.v2.prefs.MyEditTextPreference
                android:title="Custom text for carrier label"
                android:defaultValue="Custom Text"
                android:dependency="is_custom_carrier_label"
                android:key="custom_carrier_label"/>
        </PreferenceScreen>
        <PreferenceScreen
            android:title="Notification panel background">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:defaultValue="false"
                android:key="noti_enable_gear_custom_bg"
                android:summaryOff="Disabled"
                android:summaryOn="Enabled"
                android:title="Enable custom background"/>
            <PreferenceCategory
                android:dependency="noti_enable_gear_custom_bg"
                android:title="General bg preferences">
                <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/custom_bg_type_entries"
                    android:entryValues="@array/custom_bg_type_values"
                    android:key="noti_gear_custom_bg_type"
                    android:title="Background type"
                    app:dependentValue="0"/>
                <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                    android:defaultValue="255"
                    android:key="noti_gear_bg_opacity"
                    android:title="Background opacity"
                    app:maxValue="255"
                    app:minValue="0"/>
            </PreferenceCategory>
            <PreferenceCategory
                android:dependency="noti_enable_gear_custom_bg"
                android:title="Custom image preferences">
                <com.wubydax.romcontrol.v2.prefs.UriSelectionPreference
                    android:key="noti_gear_bg_image_uri"
                    android:title="Select Bg image"/>
                <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/crop_entries"
                    android:entryValues="@array/crop_values"
                    android:key="noti_gear_bg_crop_type"
                    android:title="Set Image Scaling Type"/>
            </PreferenceCategory>
            <PreferenceCategory
                android:dependency="noti_enable_gear_custom_bg"
                android:title="Color and gradient preferences">
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#00000000"
                    android:dependency="noti_gear_custom_bg_type"
                    android:key="noti_gear_bg_primary_color"
                    android:title="Select primary color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:defaultValue="#00000000"
                    android:dependency="noti_gear_custom_bg_type"
                    android:key="noti_gear_second_gradient_color"
                    android:title="Secondary Color (for gradient)"/>
                <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:defaultValue="0"
                    android:dependency="noti_gear_custom_bg_type"
                    android:entries="@array/gradient_entries"
                    android:entryValues="@array/gradient_values"
                    android:key="noti_gear_bg_gradient_orientation"
                    android:title="Gradient orientation"/>
            </PreferenceCategory>
        </PreferenceScreen>
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:title="Make Ongoing Notifications Removable"
            android:key="ongoing_notifications"
            android:defaultValue="false"
            android:summaryOn="Ongoing Notifications are removeable"
            android:summaryOff="Ongoing Notifications are permanent" />
         <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
             android:title="Animation at bottom"
             android:key="show_gif_animation"
             android:summaryOn="Enabled "
             android:summaryOff="Disabled" />
    </PreferenceScreen>

    <PreferenceScreen android:title="Lockscreen">
        <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Use Custom Carrier Text" android:key="custom_lock_carrier" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
        <com.wubydax.romcontrol.v2.prefs.MyEditTextPreference android:title="Carrier Custom Text" android:defaultValue="" android:key="custom_lock_carrier_text" android:summary="Edit carrier label" android:dependency="custom_lock_carrier" android:dialogTitle="Set Custom Text" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Carrier Text" android:defaultValue="-1" android:key="carrier_color" android:summary="Choose carrier color" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Lockscreen Owner Info " android:key="lockscreen_owner_text_color" android:summary="" android:defaultValue="-1" />
    </PreferenceScreen>

    <PreferenceScreen android:title="Statusbar">

        <PreferenceScreen android:title="Icon colors">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Separate colors for elements" android:key="is_global_sb_color" android:defaultValue="false" android:summaryOn="All elements can be colored separately" android:summaryOff="Global color will apply to all elements" />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Global color" android:defaultValue="#ffffff" android:key="global_sb_color" />
            <PreferenceCategory android:title="Seperate colors">
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Clock color" android:defaultValue="#ffffff" android:key="gear_clock_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery percent color" android:defaultValue="#ffffff" android:key="battery_percent_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Status icons color" android:defaultValue="#ffffff" android:key="status_icons_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Notification icons color" android:defaultValue="#ffffff" android:key="notification_icons_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Wifi signal color" android:defaultValue="#ffffff" android:key="wifi_signal_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Mobile signal color" android:defaultValue="#ffffff" android:key="mobile_signal_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Mobile type and arrows color" android:defaultValue="#ffffff" android:key="mobile_type_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Roaming icon color" android:defaultValue="#ffffff" android:key="mobile_roaming_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Airplane mode color" android:defaultValue="#ffffff" android:key="airplane_mode_color" android:dependency="is_global_sb_color" />
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Upload text color" android:defaultValue="#ffffff" android:key="network_traffic_upload_color" android:dependency="is_global_sb_color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Download text color" android:defaultValue="#ffffff" android:key="network_traffic_download_color" android:dependency="is_global_sb_color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Traffic arrows color" android:key="network_traffic_arrow_color" android:defaultValue="#ffffff" android:dependency="is_global_sb_color"/>
            </PreferenceCategory>
        </PreferenceScreen>

        <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/SignalPositionName" android:title="Signal Position" android:key="leftsignal" android:defaultValue="0" android:entryValues="@array/SignalPositionValue" />

        <PreferenceScreen android:title="Clock Settings">
            <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Stock clock left" android:key="clockleft" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled"/>
            <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Stock clock center" android:key="clockcenter" android:defaultValue="false" android:summaryOn="Enabled" android:summaryOff="Disabled"/>
            <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference android:title="Stock clock right" android:key="clockright" android:defaultValue="true" android:summaryOn="Enabled" android:summaryOff="Disabled"/>
            <PreferenceScreen android:title="Press clock for open any app">
                <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Enable Tap Clock" android:key="sb_tap_clock_launcher" android:defaultValue="true" android:summaryOn="Tap clock active" android:summaryOff="Tap clock is disabled" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
                <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference android:key="press_clock_custom_app" android:title="Choose app" android:dependency="sb_tap_clock_launcher" app:intentSeparator="\##" />
            </PreferenceScreen>
        </PreferenceScreen>

        <PreferenceScreen android:title="Network traffic preferences">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:title="Displayed traffic info"
                android:key="network_traffic_state"
                android:defaultValue="3"
                app:dependentValue="0"
                android:entryValues="@array/traffic_state_values"
                android:entries="@array/traffic_state_items"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="Display data in Bytes"
                android:summaryOff="Displayed in Bits (default)"
                android:summaryOn="Displayed in Bytes"
                android:defaultValue="false"
                android:key="NetworkSpeedView"
                android:dependency="network_traffic_state"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="Show traffic arrows"
                android:key="network_traffic_show_arrows"
                android:defaultValue="true"
                android:summaryOff="Arrows hidden"
                android:summaryOn="Arrows shown"
                android:dependency="network_traffic_state"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:title="Arrows position"
                android:key="network_traffic_arrows_position"
                android:dependency="network_traffic_show_arrows"
                android:defaultValue="0"
                android:entryValues="@array/arrow_position_values"
                android:entries="@array/arrow_position_entries"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="Autohide on low traffic"
                android:key="network_traffic_autohide"
                android:defaultValue="false"
                android:summaryOff="Displayed always"
                android:summaryOn="Autohide enabled"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                android:title="Autohide threshold"
                app:unitsValue="Kb"
                app:maxValue="100"
                android:key="network_traffic_threshold"
                android:defaultValue="10"
                android:dependency="network_traffic_autohide"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:title="Font style"
                android:key="network_traffic_text_style"
                android:defaultValue="0"
                android:entries="@array/traffic_style_entries"
                android:entryValues="@array/traffic_style_entry_values"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                android:title="Text size scale factor"
                android:key="network_traffic_scale"
                app:maxValue="10"
                android:defaultValue="10"/>
        </PreferenceScreen>

        <PreferenceScreen android:title="Battery Settings">
            <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                android:title="Display Percentage"
                android:icon="@drawable/batterypercent"
                android:key="display_battery_percentage"
                android:defaultValue="0"
                android:summaryOn="Battery text shown"
                android:summaryOff="Battery text is hidden" />
            <com.wubydax.romcontrol.v2.prefs.MyCheckBoxPreference
                android:title="Display inBattery Percentage"
                android:icon="@drawable/inbatterypercentage"
                android:key="status_bar_show_battery_percent"
                android:defaultValue="0"
                android:summaryOn="Text shown"
                android:summaryOff="Text hidden" />
        </PreferenceScreen>
    </PreferenceScreen>
</PreferenceScreen>